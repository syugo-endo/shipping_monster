<section class="page-section" id="contact">
    <div class="text-center">
        <h2 class="section-heading text-uppercase"><%= t('footer.contact')%></h2>
        <h3 class="section-subheading text-muted"><%= t('contactform.head')%></h3>
    </div>
    
    <%= form_for @contact do |f| %>
    
    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <%= f.label :email, t('contactform.emailtitle'), class: 'form-text' %>
      <%= f.text_field :email, class: 'form-control', placeholder: t('contactform.emailfrom') %>
    </div>
  <div class="form-group">
    <%= f.label :message, t('contactform.messagetitle'), class: 'form-text'%>
    <%= f.text_area :message, size: '30x10', class: 'form-control', placeholder: t('contactform.messagetext') %>
  </div>

  <div class="text-center">
    <div id="success">
    </div>
      <%= f.submit t('contactform.send'), class: "btn btn-primary btn-xl text-uppercase"%>
  </div>
<% end %>